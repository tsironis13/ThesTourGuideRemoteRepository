<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thesguideproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <permission
        android:name="com.example.thesguideproject.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
 
    <uses-permission android:name="com.example.thesguideproject.permission.MAPS_RECEIVE" />
    
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
    <action android:name="android.location.PROVIDERS_CHANGED" />
 
    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
 
    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light"
         >
        
        
        <provider
            android:name="com.example.searchResults.SearchSuggestionsProvider"
            android:authorities="com.example.searchResults.MySuggestionProvider"
        />   
        
        
        <activity
            android:name="com.example.thesguideproject.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.MapTestActivity"
            android:label="@string/app_name" >     
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.MainLayoutActivity"
            android:label="@string/app_name">
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.FragmentActivityTest"
            android:label="@string/app_name">
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.CursorAdapterExample"
            android:label="@string/app_name"
            android:configChanges="screenSize|orientation|keyboardHidden">
        </activity>
        
         <activity 
            android:name="com.example.myLocation.GPSTracker"
            android:label="@string/app_name" >     
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.PlacesDetailsTabs"
            android:label="@string/app_name" >     
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.StartActivityFromFragment"
            android:label="@string/app_name" >     
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.InternalStorage"
            android:label="@string/app_name" >     
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.PlacesListFragmentActivity"
            android:label="@string/app_name" 
            android:configChanges="screenSize|orientation|keyboardHidden"> 
            
            <intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        	    <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.example.searchResults.SearchResultsActivity" />
            
        </activity>

        <activity 
            android:name="com.example.thesguideproject.PhotoPagerActivity"
            android:label="@string/app_name" >     
        </activity>
        
        <activity 
            android:name="com.example.thesguideproject.ActBarTest"
            android:label="@string/app_name" >   
            
            <intent-filter>
                <action android:name="android.intent.action.ActBarTest" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
            
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.example.searchResults.SearchResultsActivity" />
            
          	<meta-data
        	    android:name="android.support.PARENT_ACTIVITY"
        	    android:value="com.example.thesguideproject.MainActivity" />
               	
            
        </activity>
        
        <!-- Search results activity -->
        <activity android:name="com.example.searchResults.SearchResultsActivity"
            android:parentActivityName="com.example.thesguideproject.ActBarTest" >
          	
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
 
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            
            
        </activity>
         
         <activity 
            android:name="com.example.thesguideproject.MainActivity"
            android:label="@string/app_name" >   
            
            <intent-filter>
                <action android:name="android.intent.action.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" /> 
            </intent-filter>
            
         </activity>  
         
         
       
         
         <service android:name="com.example.myLocation.LocationServiceLoader" />
        
        
        <!-- Goolge Maps API Key -->
		<meta-data
  			android:name="com.google.android.maps.v2.API_KEY"
  			android:value="AIzaSyBTiMulg6vfO2TlMv0DqgYgeG90PqBunG4" />
		
		<meta-data 
            android:name="com.google.android.gms.version" 
		    android:value="@integer/google_play_services_version"/>
       
    </application>
    
    

</manifest>
